{
  "name": "javascript-af",
  "workspaces": [
    "packages/*"
  ],
  "version": "0.0.1",
  "main": "index.js",
  "repository": "git@github.com:javascript-af/javascript-af.git",
  "author": "Harshit Pant <pantharshit00@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "lerna run --parallel --scope=@jsaf/backend dev",
    "cm": "commit"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint --env HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts?": [
      "prettier --write",
      "tslint --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-conventional": "^7.1.2",
    "@commitlint/prompt-cli": "^7.2.1",
    "husky": "^1.2.1",
    "lerna": "^3.6.0",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.3",
    "tslint": "^5.12.0",
    "tslint-config-prettier": "^1.17.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.2.2"
  },
  "dependencies": {}
}
