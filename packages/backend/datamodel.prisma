type User {
  id: ID! @unique
  name: String!
  username: String! @unique
  email: String @unique
  newsItems: [News!]!
  talks: [Talk!]!
  githubToken: String!
  profilePic: String
  createdAt: DateTime!
  updatedAt: DateTime!
}

type News {
  id: ID! @unique
  slug: String! @unique
  title: String!
  content: String!
  previewImage: String
  isFeatured: Boolean
  writer: User!
  tags: [Tag!]!
  createdAt: DateTime!
  updatedAt: DateTime!
}

type Talk {
  id: ID! @unique
  slug: String! @unique
  title: String!
  previewImage: String!
  alt: String
  isFeatured: Boolean
  speaker: User
  length: Int
  tags: [Tag!]!
  createdAt: DateTime!
  updatedAt: DateTime!
}

type Repo {
  id: ID! @unique
  slug: String! @unique
  githubName: String!
  githubOwner: String!
  githubUrl: String!
  ownerUsername: String!
  isFeatured: Boolean
  description: String
  owner: User
  tags: [Tag!]!
  upvotes: [Upvote!]!
  createdAt: DateTime!
  updatedAt: DateTime!
}

type Upvote {
  id: ID! @unique
  user: User!
  repo: Repo!
}

type Tag {
  id: ID! @unique
  name: String! @unique
  talks: [Talk!]!
  newsItems: [News!]!
  repos: [Repo!]!
}
